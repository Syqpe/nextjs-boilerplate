{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext", "es2017"],
    "typeRoots": ["./@types", "./node_modules/@types"],
    "baseUrl": ".",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "isolatedModules": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": false,
    "strictPropertyInitialization": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "paths": {
      "@configs": ["src/server/configs/index.ts"],
      "@client/*": ["src/client/*"],
      "@cwidgets/*": ["src/client/widgets/*"],
      "@cfeatures/*": ["src/client/features/*"],
      "@centities/*": ["src/client/entities/*"],
      "@ccomponents/*": ["src/client/shared/components/*"],
      "@cshared/*": ["src/client/shared/*"]
    }
  },
  "exclude": ["dist", ".next", "next.config.js", "node_modules", "scripts"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "./@types", "./@types/**/*.d.ts"]
}
